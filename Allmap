local ESPTab = Window:Tab({Title = "ESP", Icon = "eye"})


ESPTab:Toggle({
    Title = "Name ESP",
    Callback = function(v)
        nameESP = v
        for _,p in pairs(Players:GetPlayers()) do createESP(p) end
    end
})

ESPTab:Toggle({
    Title = "HP ESP",
    Callback = function(v)
        hpESP = v
        for _,p in pairs(Players:GetPlayers()) do createESP(p) end
    end
})
