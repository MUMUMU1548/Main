local WEBHOOK_URL = "https://discord.com/api/webhooks/1455109767600148646/MqknCvom33KABPOLgqPq7dWD6lirRwogU7ZYySTg6vqVwglwptBa6hozt9tZi1qVsxIY"

local HttpService = game:GetService("HttpService")
local Marketplace = game:GetService("MarketplaceService")
local Players = game:GetService("Players")

local plr = Players.LocalPlayer

-- ===== ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏≠‡∏ó =====
local BOT_NAME = "Seesa" -- ‡∏ä‡∏∑‡πà‡∏≠‡∏ö‡∏≠‡∏ó
local BOT_AVATAR = "https://cdn.discordapp.com/attachments/1455090922227503130/1455118745960845435/Screenshot_2025-12-19-23-59-09-03_f69139cffc4d135a71392e13634f144a.jpg" -- ‡∏£‡∏π‡∏õ‡∏ö‡∏≠‡∏ó

-- ‡∏î‡∏∂‡∏á‡∏£‡∏π‡∏õ‡πÅ‡∏°‡∏û (‡∏£‡∏π‡∏õ‡∏ï‡∏±‡∏ß Roblox)
local mapApi = "https://thumbnails.roblox.com/v1/users/avatar?userIds=" ..
    plr.UserId .. "&size=420x420&format=Png&isCircular=false" -- ‡πÉ‡∏ä‡πâ‡∏£‡∏π‡∏õ‡∏ï‡∏±‡∏ß Roblox ‡∏Ç‡∏≠‡∏á‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
local mapResponse = game:HttpGet(mapApi)
local mapJson = HttpService:JSONDecode(mapResponse)
local mapThumbnail = mapJson.data[1].imageUrl or ""

-- ‡∏î‡∏∂‡∏á‡∏ä‡∏∑‡πà‡∏≠‡πÅ‡∏°‡∏û‡πÅ‡∏•‡∏∞‡∏•‡∏¥‡∏á‡∏Å‡πå
local placeId = game.PlaceId
local placeName = Marketplace:GetProductInfo(placeId).Name
local placeLink = "https://www.roblox.com/games/"..placeId

-- ‡πÄ‡∏ß‡∏•‡∏≤‡∏õ‡∏£‡∏∞‡πÄ‡∏ó‡∏®‡πÑ‡∏ó‡∏¢
local function GetThaiTimestamp()
    local time = os.date("!*t")
    time.hour = (time.hour + 7) % 24
    return string.format("%02d-%02d-%02d %02d:%02d:%02d", time.day, time.month, time.year, time.hour, time.min, time.sec)
end
local timestamp = GetThaiTimestamp()

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Embed
local data = {
    username = BOT_NAME,
    avatar_url = BOT_AVATAR,
    embeds = {{
        title = "üìç Player Joined",
        color = 3447003,
        thumbnail = { url = BOT_AVATAR },   -- ‡πÉ‡∏ä‡πâ‡∏£‡∏π‡∏õ‡∏ö‡∏≠‡∏ó
        image = { url = mapThumbnail },     -- ‡∏£‡∏π‡∏õ‡∏ï‡∏±‡∏ß Roblox
        fields = {
            { name = "üë§ Player", value = plr.Name, inline = true },
            { name = "üó∫ Map", value = "["..placeName.."]("..placeLink..")", inline = true },
            { name = "üÜî JobId", value = tostring(game.JobId), inline = true },
            { name = "‚è± Time (TH)", value = timestamp, inline = true }
        }
    }}
}

local body = HttpService:JSONEncode(data)

request({
    Url = WEBHOOK_URL,
    Method = "POST",
    Headers = { ["Content-Type"] = "application/json" },
    Body = body
})
